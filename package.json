{
	"name": "code-chunk-monorepo",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "bun run --filter 'code-chunk' build",
		"dev": "bun run --filter 'code-chunk' dev",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"test": "bun run --filter 'code-chunk' test",
		"test:coverage": "bun run --filter 'code-chunk' test:coverage",
		"test:watch": "bun run --filter 'code-chunk' test:watch",
		"type-check": "bun run --filter '*' type-check",
		"eval": "bun run --filter '@supermemory/eval' start"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"typescript": "^5.9.3"
	}
}
